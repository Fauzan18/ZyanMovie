<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/ItemMovieCardColor"
    app:cardCornerRadius="@dimen/ItemMovieCardCorner"
    android:layout_margin="@dimen/ItemMovieMarginCardView"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ItemMovieMarginLinear"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/ItemImageWidth"
            android:layout_height="@dimen/ItemImageHeight"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imgMovie"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvJudulMovie"
            android:text="@string/ItemTextTexView"/>



    </LinearLayout>

</android.support.v7.widget.CardView>